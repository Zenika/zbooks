<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:VerticalPanel>
    	<g:Label>Ajouter un livre à la bibliothèque</g:Label>
	    <g:Grid>
	    	<g:row>
	    		<g:customCell>
	    			<g:Label>ISBN-13 : </g:Label>
	    		</g:customCell>
	    		<g:customCell>
	    			<g:TextBox ui:field="ISBN"></g:TextBox>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Label>Collection : </g:Label>
	    		</g:customCell>
	    		<g:customCell>
	    			<g:ListBox ui:field="collection" visibleItemCount="1">
	    				<g:item value="RENNES">
	    					Rennes
	    				</g:item>
	    				<g:item value="NANTES">
	    					Nantes
	    				</g:item>
	    				<g:item value="SBR">
	    					Sébastien Brousse
	    				</g:item>
	    			</g:ListBox>
	    		</g:customCell>
	    	</g:row>
	    	<g:row>
	    		<g:customCell>
	    			<g:Button ui:field="add" styleName="btn btn-primary">Ajouter</g:Button>
	    		</g:customCell>
	    	</g:row>
	    </g:Grid>
    </g:VerticalPanel>
</ui:UiBinder>